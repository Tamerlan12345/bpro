
# The URL of the frontend application that will be making requests to this server.
FRONTEND_URL=http://127.0.0.1:5500

# Your secret API key for the Google Gemini service.
GOOGLE_API_KEY=AIzaSy...

# Your secret API key for the Speechmatics service.
SPEECHMATICS_API_KEY=your_speechmatics_api_key

# (Optional) The port on which the server will run. Defaults to 3000.
PORT=3000

# A long, random, and secret string used to sign session ID cookies.
# You can generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-super-secret-session-string

# PostgreSQL connection string
# Example: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/mydatabase
